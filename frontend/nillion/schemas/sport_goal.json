{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sport Goal Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "intervalDuration": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "completedMetrices": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "targetMertices": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "goalDayWisePlan": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      }
    },
    "required": [
      "_id",
      "intervalDuration",
      "completedMetrices",
      "targetMertices",
      "goalDayWisePlan"
    ]
  }
}