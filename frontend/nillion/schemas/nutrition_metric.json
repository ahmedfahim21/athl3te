{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Nutrition Metric Schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "proteins": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "carbohydrates": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "fats": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "caloriesConsumed": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "hydration": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            }
        },
        "required": [
            "_id",
            "proteins",
            "carbohydrates",
            "fats",
            "caloriesConsumed",
            "hydration"
        ]
    }
}