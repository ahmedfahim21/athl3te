{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User Schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "age": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "gender": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "name": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "weight": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "height": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "injuryDescription": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            }
        },
        "required": [
            "_id",
            "age",
            "gender",
            "name",
            "weight",
            "height",
            "injuryDescription"
        ]
    }
}