{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Activity Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "distance": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "time": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "speed": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "calories": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "cadence": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "activityType": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      },
      "pr": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": [
          "$share"
        ]
      }
    },
    "required": [
      "_id",
      "distance",
      "time",
      "speed",
      "calories",
      "cadence",
      "activityType",
      "pr"
    ]
  }
}