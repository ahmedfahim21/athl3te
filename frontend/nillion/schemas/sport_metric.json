{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sport Metric Schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "distance": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "calories": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            }
        },
        "required": [
            "_id",
            "distance",
            "calories"
        ]
    }
}